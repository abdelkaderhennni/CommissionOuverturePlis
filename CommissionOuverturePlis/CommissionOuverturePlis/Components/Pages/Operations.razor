@page "/operations"
<link href="css/operations.css" rel="stylesheet" />

<div class="app">
   

    <main class="content">
        <h1>Fiches Opération</h1>

        <div class="toolbar">
            <div class="filters">
                <button class="filter">Tous</button>
                <button class="filter">Offers</button>
                <button class="filter">Retraits</button>
            </div>

            <div class="search-container">
                <svg class="search-icon" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                </svg>
                <input class="search" placeholder="Rechercher..." />
            </div>
            <button class="add-btn">+ Ajouter Fournissuer</button>
        </div>

        <div class="cards">
            @foreach (var op in operations)
            {
                <div class="card">
                    <h3>@op.Title</h3>
                    <p><strong>Objet :</strong> @op.Description</p>
                    <p><strong>Type :</strong> @op.Type</p>
                    <p><strong>Nature :</strong> @op.Nature</p>
                    <button class="details">Details</button>
                </div>
            }
        </div>
    </main>
</div>

